<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="375dp"
    android:layout_height="273dp"
    android:background="@drawable/getintouchgradient"
    android:clipToOutline="true"

    tools:context=".ViewModel.getintouchFragment" >

    <View
        android:id="@+id/rectangle_1"
         android:layout_width="54dp"
        android:layout_height="5dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="165dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="9dp"
        android:background="@drawable/lineget_intouch"
        />
    <View
        android:id="@+id/ellipse_4"
        android:layout_width="120dp"
        android:layout_height="120dp"


        android:layout_marginLeft="133dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/circle"
        android:shape="oval"
        />


    <androidx.cardview.widget.CardView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="138dp"
        app:cardCornerRadius="250dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/coachimg"

            android:layout_width="110dp"
            android:layout_height="110dp"


            app:srcCompat="@drawable/coachdevie"

            />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/name"
        android:layout_width="196dp"
        android:layout_height="37dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="154dp"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center_vertical"
        android:textSize="25sp"
        android:textColor="#E0FFEE"
        android:text="Iheb Debbech"
        />

    <TextView
        android:id="@+id/Job"
        android:layout_width="196dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="92dp"
        android:layout_marginTop="188dp"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center_horizontal|center_vertical"
        android:text="coach de vie"
        android:textColor="#E0FFEE"
        android:textSize="15sp" />

    <Button
        android:id="@+id/getintouchbutton"

        android:layout_width="221dp"
        android:layout_height="43dp"

        android:background="@drawable/messagetextrounded"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="225dp"


        android:fontFamily="@font/montserrat_bold"
        android:text="Get in Touch"
        android:textAlignment="center"
        android:textColor="@color/colorSecondarydarker"


        android:textSize="18sp" />

</RelativeLayout>